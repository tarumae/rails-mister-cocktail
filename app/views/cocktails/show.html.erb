<div class="container">
<% if @cocktail.photo.attached? %>
  <div class="banner" style='background-image: url("<%= cl_image_path(@cocktail.photo.key, width: 400, height: 300, crop: :fill) %>")'></div>
<% else %>
  <div class="banner" style='background-image: url("https://placekitten.com/g/300/200")'></div>
<% end %>
  <div class="row flex">
    <div class="cocktail-name">
      <h1 class="nagative-title-margin"><%= @cocktail.name %></h1>
    </div>
    <div class="cocktail-ingredients">
      <h2>Ingredients: </h2>
      <ul>
        <% @doses.each do |dose| %>
        <li><%= dose.ingredient.name %> - <%= dose.description %> <div class="delete"><%= link_to "+", dose_path(dose), method: :delete, data: {confirm: "Are you sure?"} %></div></li>
        <% end %>
      </ul>
      <%= link_to "+ Ingredient", new_cocktail_dose_path(@cocktail) %>
    </div>
  </div>
</div>

