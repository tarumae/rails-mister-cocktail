<div class="container">
  <h1><%= @cocktail.name %></h1>
  <%= link_to "+ Ingredient", new_cocktail_dose_path(@cocktail) %>
  <h2>Ingredients: </h2>
  <ul>
    <% @doses.each do |dose| %>
    <li><%= dose.ingredient.name %> - <%= dose.description %> <%= link_to "(delete)", dose_path(dose), method: :delete, data: {confirm: "Are you sure?"}  %></li>
    <% end %>
  </ul>
</div>