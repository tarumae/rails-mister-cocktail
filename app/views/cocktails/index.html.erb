<div class="container">
  <h1 class="big-title">Cocktails</h1>
  <div class="cards">
  <% @cocktails.each do |cocktail| %>
    <% if cocktail.photo.attached? %>
      <%= link_to cocktail.name, cocktail_path(cocktail), class: "card-category", style: "background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('#{cl_image_path cocktail.photo.key}')"  %>
    <% else %>
      <%= link_to cocktail.name, cocktail_path(cocktail), class: "card-category", style: "background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://placekitten.com/g/300/200')"  %>
    <% end %>
  <% end %>
  </div>
</div>

